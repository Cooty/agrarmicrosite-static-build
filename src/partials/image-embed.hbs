<figure
  class="ag-image-container"
  x-data="{ shown: false }"
  x-intersect.once="shown = true"
>
  <img
    :srcset="shown ? 'https://via.placeholder.com/480x270 480w, https://via.placeholder.com/731x411 731w, https://via.placeholder.com/666x375 666w' : ''"
    :sizes="shown ? '((min-width: 0) and (max-width: 480px)) 480px, ((min-width: 481px) and (max-width: 767px)) 731px, (min-width: 768px) 666px' : ''"
    :src="shown ? 'https://via.placeholder.com/731x411' : 'data:image/gif;base64,R0lGODlhAQABAID/AMDAwAAAACH5BAEAAAAALAAAAAABAAEAAAEBMgA7'"
    alt="dummy image"
  />
  <noscript>
    <img src="https://via.placeholder.com/731x411" alt="dummy image" />
  </noscript>
</figure>